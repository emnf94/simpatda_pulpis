<script type="text/javascript">
    $(function() {
        calldatagrid();
    });

    function calldatagrid(direction) {
        datagridsptpd($("#page").val(), $("#rows").val(), direction);
    }

    $(function() {
        $('#t_masapajak_cari_0').daterangepicker({
            format: 'DD-MM-YYYY'
        }, function() {
            calldatagrid();
        });
    });

    function datagridsptpd(page, row, direction) {
        $.post('<?= $this->url() ?>/dataGridSptpd/' + page + '/' + row + '/' + direction, {
            t_nourut: $('#t_nourut_cari_0').val(),
            t_npwpd: $('#t_npwpd_cari_0').val(),
            t_nama: $('#t_nama_cari_0').val(),
            t_niop: $('#t_niop_cari_0').val(),
            t_namaobjek: $('#t_namaobjek_cari_0').val(),
            t_jenispajak: $('#t_jenispajak_cari_0').val(),
            t_masapajak: $('#t_masapajak_cari_0').val(),
            t_kodebayar: $('#t_kodebayar_cari_0').val(),
            t_jmlhpajak: $('#t_jmlhpajak_cari_0').val(),
            t_statusbayar: $('#t_statusbayar_cari_0').val()
        }, function(data) {
            var aa = JSON.parse(data)
            $("#body_grid").html(aa.grid);
            $("#rows").val(aa.rows);
            $("#page").val(aa.page);
            $("#total_data").html(": " + aa.count);
            $("#total_halaman").html(": " + aa.total_halaman);
            $("#paginatore").html(aa.paginatore);
            $("#awaldata").html(aa.awaldata);
            $("#akhirdata").html(aa.akhirdata);
        });
    }

    function bukaCetakSSPD(a) {
        $.post('<?= $this->url() ?>/dataPembayaran', {
            idtransaksi: a
        }, function(data) {
            var aa = JSON.parse(data);
            $("#idtransaksi").val(aa.idtransaksi);
            $("#namawp").val(aa.namawp);
            $("#alamatwp").val(aa.alamatwp);
            $("#tglpembayaran").val(aa.tglpembayaran);
            $("#idjenispajaksptpd").val(aa.idjenispajaksptpd);
            $("#jenispajaksptpd").val(aa.jenispajaksptpd);
        });
        $('#modalCetakSSPD').modal('show');
    }

    function tutupCetakSSPD() {
        $('#modalCetakSSPD').modal('hide');
    }

    function cetaksspd() {
        var a = document.getElementById('idjenispajaksptpd').value;
        if (a === '6') { // Pajak Minerba
            window.open('<?= $this->url() ?>/cetaksspdminerba?idtransaksi=' + $("#idtransaksi").val() + "&ttd0=" + $("#ttd0").val());
        } else { // Selain Minerba
            window.open('<?= $this->url() ?>/cetaksspd?idtransaksi=' + $("#idtransaksi").val() + "&ttd0=" + $("#ttd0").val());
        }
    }

    function bukaCetakSSRD(a) {
        $.post('<?= $this->url() ?>/dataPembayaran', {
            idtransaksi: a
        }, function(data) {
            var aa = JSON.parse(data);
            $("#idtransaksiret").val(aa.idtransaksi);
            $("#namawpret").val(aa.namawp);
            $("#alamatwpret").val(aa.alamatwp);
            $("#tglpembayaranret").val(aa.tglpembayaran);
        });
        $('#modalCetakSSRD').modal('show');
    }

    function tutupCetakSSRD() {
        $('#modalCetakSSRD').modal('hide');
    }

    function cetakssrd() {
        window.open('<?= $this->url() ?>/cetakssrd?idtransaksi=' + $("#idtransaksiret").val() + "&ttd0=" + $("#ttdret").val());
    }

    function hapus(a) {
        var tanya = confirm("Hapus data ini?")
        if (tanya) {
            $.post('<?= $this->url() ?>/hapus/' + a);
        }
        setTimeout(function() {
            calldatagrid();
        }, 1000);
    }
</script>
