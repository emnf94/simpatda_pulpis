            $('#t_selisihdasar').val(aa.t_selisihdasar);
            $('#t_jmlhpajakseharusnya').val(aa.t_jmlhpajakseharusnya);
            $('#t_totalskpdlb').val(aa.t_totalskpdlb);
        });
    }
</script>