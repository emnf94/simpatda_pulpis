    function pilihketetapan(a, b) {
        $.post('<?= $this->url() ?>/pilihketetapan', {t_jenisketetapan: a, t_idtransaksi: b}, function (data) {
            var aa = JSON.parse(data);
            $('#t_tglpendataan').val(aa.t_tglpendataan);
            $('#t_dasarpengenaan').val(aa.t_dasarpengenaan);
            $('#t_jmlhpajak').val(aa.t_jmlhpajak);
        });
    }
    
    function hitungskpdlb() {
        $.post('<?= $this->url() ?>/hitungskpdlb', {t_dasarrevisi: $("#t_dasarrevisi").val(), t_dasarpengenaan: $("#t_dasarpengenaan").val(), t_tarifpajak : $("#t_tarifpajak").val()}, function (data) {
