    function calldatagrid(direction) {
        datagridskrd($("#page").val(), $("#rows").val(), direction);
    }

    function datagridskrd(page, row, direction) {
        $.post('<?= $this->url() ?>/dataGridSudahskrd/' + page + '/' + row + '/' + direction, {
            t_tglpenetapan: $('#t_tglpenetapan_cari_0').val(),
            t_npwpd: $('#t_npwpd_cari_0').val(),
            t_nama: $('#t_nama_cari_0').val(),
