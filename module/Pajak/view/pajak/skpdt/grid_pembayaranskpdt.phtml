<script type="text/javascript">
    $(function () {
        calldatagridpembayaranskpdt();
    });

    function calldatagridpembayaranskpdt(direction) {
        if ($("#combocari2").val().length == 0)
            par1 = undefined;
        else
            par1 = $("#combocari2").val()
        if ($("#kolomcari2").val().length == 0)
            par2 = undefined;
        else
            par2 = $("#kolomcari2").val()
        if ($("#combosorting2").val().length == 0)
            par3 = undefined;
        else
            par3 = $("#combosorting2").val()
        if (document.getElementById("sortasc2").checked)
            par4 = $("#sortasc2").val()
        else
            par4 = undefined;
        if (document.getElementById("sortdesc2").checked)
            par5 = $("#sortdesc2").val()
        else
            par5 = undefined;
        if ($("#combooperator2").val().length == 0)
            par6 = undefined;
        else
            par6 = $("#combooperator2").val()
        datagridpembayaranskpdt($("#page2").val(), $("#rows2").val(), direction, par1, par2, par3, par4, par5, par6);
    }

    function datagridpembayaranskpdt(page, row, direction, par1, par2, par3, par4, par5, par6) {
        $.get('<?= $this->url() ?>/dataGridPembayaranSkpdt/' + page + '/' + row + '/' + direction + '/' + par1 + '/' + par2 + '/' + par3 + '/' + par4 + '/' + par5 + '/' + par6, function (data) {
            var aa = JSON.parse(data)
            $("#body_grid2").html(aa.gridsudah);
            $("#rows2").val(aa.rowssudah);
            $("#page2").val(aa.pagesudah);
            $("#total_data2").html(": " + aa.countsudah);
            $("#total_halaman2").html(": " + aa.total_halamansudah);
            $("#paginatore2").html(aa.paginatoresudah);
            $("#awaldata2").html(aa.awaldatasudah);
            $("#awaldata2").html(aa.awaldatasudah);
        });
    }

    function hapus(a) {
        var tanya = confirm("Hapus data ini?")
        if (tanya) {
            $.post('<?= $this->url() ?>/hapus/' + a);
        }
        setTimeout(function () {
            calldatagridpembayaranskpdt();
        }, 1000);
    }

    function bukaCetakSSPD(a) {
        $.post('<?= $this->url() ?>/dataPembayaran', {idtransaksi: a}, function (data) {
            var aa = JSON.parse(data);
            $("#idtransaksi").val(aa.idtransaksi);
            $("#namawp").val(aa.namawp);
            $("#alamatwp").val(aa.alamatwp);
            $("#tglpembayaran").val(aa.tglpembayaran);
        });
        $('#modalCetakSSPD').modal('show');
    }

    function tutupCetakSSPD() {
        $('#modalCetakSSPD').modal('hide');
    }

    function cetaksspd() {
        window.open('<?= $this->url() ?>/cetaksspd?idtransaksi=' + $("#idtransaksi").val() + "&ttd0=" + $("#ttd0").val());
    }

</script>
