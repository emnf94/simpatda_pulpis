        if (document.getElementById("sortasc3").checked)
            par4 = $("#sortasc3").val()
        else
            par4 = undefined;
        if (document.getElementById("sortdesc3").checked)
            par5 = $("#sortdesc3").val()
        else
            par5 = undefined;
        if ($("#combooperator3").val().length == 0)
            par6 = undefined;
        else
