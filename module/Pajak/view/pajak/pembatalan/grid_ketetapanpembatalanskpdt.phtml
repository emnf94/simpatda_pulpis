        datagridketetapanpembatalanskpdt($("#page3").val(), $("#rows3").val(), direction, par1, par2, par3, par4, par5, par6);
    }

    function datagridketetapanpembatalanskpdt(page, row, direction, par1, par2, par3, par4, par5, par6) {
        $.get('<?= $this->url() ?>/dataGridKetetapanPembatalanSkpdt/' + page + '/' + row + '/' + direction + '/' + par1 + '/' + par2 + '/' + par3 + '/' + par4 + '/' + par5 + '/' + par6, function (data) {
            var aa = JSON.parse(data)
            $("#body_grid3").html(aa.gridbelum);
            $("#rows3").val(aa.rowsbelum);
            $("#page3").val(aa.pagebelum);
            $("#total_data3").html(": " + aa.countbelum);
            $("#total_halaman3").html(": " + aa.total_halamanbelum);
            $("#paginatore3").html(aa.paginatorebelum);
            $("#awaldata3").html(aa.awaldatabelum);
            $("#akhirdata3").html(aa.akhirdatabelum);
        });
    }
</script>
