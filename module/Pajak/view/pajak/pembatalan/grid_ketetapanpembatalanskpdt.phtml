    function calldatagrid3(direction) {
        if ($("#combocari3").val().length == 0)
            par1 = undefined;
        else
            par1 = $("#combocari3").val()
        if ($("#kolomcari3").val().length == 0)
            par2 = undefined;
        else
            par2 = $("#kolomcari3").val()
        if ($("#combosorting3").val().length == 0)
            par3 = undefined;
        else
