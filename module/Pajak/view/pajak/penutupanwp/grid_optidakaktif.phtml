<script type="text/javascript">
    $(function () {
        $('#t_tgldaftar_cari_2').daterangepicker({
            format: 'DD-MM-YYYY'
        }, function () {
            calldatagrid2();
        });
    });

    $(function () {
        calldatagrid2();
    });

    function calldatagrid2(direction) {
        datagridtidakaktifOP($("#page").val(), $("#rows").val(), direction);
    }

    function datagridtidakaktifOP(page, row, direction) {
        $.post('<?= $this->url() ?>/dataGridTutupop/' + page + '/' + row + '/' + direction, {
            t_tgldaftar: $('#t_tgldaftar_cari_2').val(),
            t_npwpd: $('#t_npwpd_cari_2').val(),
            t_nama: $('#t_nama_cari_2').val(),
            t_alamat_lengkap: $('#t_alamat_lengkap_cari_2').val(),
            t_jenis: $('#t_jenis_cari_2').val()
        }, function (data) {
            var aa = JSON.parse(data);
            $("#body_grid2").html(aa.grid);
            $("#rows").val(aa.rows);
            $("#page").val(aa.page);
            $("#total_data2").html(": " + aa.count);
            $("#total_halaman2").html(": " + aa.total_halaman);
            $("#paginatore2").html(aa.paginatore);
            $("#awaldata2").html(aa.awaldata);
            $("#akhirdata2").html(aa.akhirdata);
        });
    }

    function bukaDataAktifasiop(a) {
        $.post('<?= $this->url() ?>/dataObjek', {t_idwpobjek: a}, function (data) {
            var aa = JSON.parse(data);
            $("#t_idwp2").val(aa.idwp);
            $("#t_idwpobjek2").val(aa.idobjek);
            $("#t_npwpdwp2").val(aa.npwpdwp);
            $("#t_namawp2").val(aa.namawp);
            $("#t_namaobjek2").val(aa.namaobjek);
            $("#t_alamatobjek2").val(aa.alamatobjek);
            $("#t_jenisobjek2").val(aa.jenisobjek);
        });
        $('#modalAktifasiOP').modal('show');
    }

    function tutupDataAktifasiop() {
        $('#modalAktifasiOP').modal('hide');
    }

