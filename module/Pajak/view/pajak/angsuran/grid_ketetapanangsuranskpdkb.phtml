            var aa = JSON.parse(data)
            $("#body_grid1").html(aa.gridbelum);
            $("#rows1").val(aa.rowsbelum);
            $("#page1").val(aa.pagebelum);
            $("#total_data1").html(": " + aa.countbelum);
            $("#total_halaman1").html(": " + aa.total_halamanbelum);
            $("#paginatore1").html(aa.paginatorebelum);
            $("#awaldata1").html(aa.awaldatabelum);
            $("#akhirdata1").html(aa.akhirdatabelum);
        });
    }
