<script type="text/javascript">
    $(function () {
        $('#t_tgldaftar_cari_1').daterangepicker({
            format: 'DD-MM-YYYY'
        }, function () {
            calldatagrid1();
        });
    });

    $(function () {
        calldatagrid1();
    });

    function calldatagrid1(direction) {
        datagridsudah($("#page1").val(), $("#rows1").val(), direction);
    }

    function datagridsudah(page, row, direction) {
        $.post('<?= $this->url() ?>/dataGridsudah/' + page + '/' + row + '/' + direction, {
            t_nosurat: $('#t_nosurat_cari_1').val(),
            t_tgldaftar: $('#t_tgldaftar_cari_1').val(),
            t_npwpd: $('#t_npwpd_cari_1').val(),
            t_nama: $('#t_nama_cari_1').val(),
            t_namaobjek: $('#t_namaobjek_cari_1').val(),
            t_jmlhpajak: $('#t_jmlhpajak_cari_1').val(),
            t_jmlhdenda: $('#t_jmlhdenda_cari_1').val(),
            t_status: $('#t_status_cari_1').val()
        }, function (data) {
            var aa = JSON.parse(data);
            $("#body_grid1").html(aa.gridsudah);
            $("#rows1").val(aa.rowssudah);
            $("#page1").val(aa.pagesudah);
            $("#total_data1").html(": " + aa.countsudah);
            $("#total_halaman1").html(": " + aa.total_halamansudah);
            $("#paginatore1").html(aa.paginatoresudah);
            $("#awaldata1").html(aa.awaldatasudah);
            $("#akhirdata1").html(aa.akhirdatasudah);
        });
    }
    
    function cetaksuratkeputusan(a) {
        $.post('<?= $this->url() ?>/dataPenghapusan', {idhapussanksi: a}, function (data) {
            var aa = JSON.parse(data);
            $("#idhapussanksi").val(aa.idhapussanksi);
            $("#namawp").val(aa.namawp);
            $("#alamatwp").val(aa.alamatwp);
            $("#namaop").val(aa.namaobjek);
            $("#alamatop").val(aa.alamatobjek);
            $("#tglketetapan").val(aa.tglketetapan);
            $("#jenispajak").val(aa.jenispajak);
            $("#idjenispajak").val(aa.idjenispajak);
            $("#jenisketetapan").val(aa.jenisketetapan);
        });
        $('#myModalcetakkeputusan').modal('show');
    }
    
    function cetaksurat() {
        window.open('<?= $this->url() ?>/cetaksuratkeputusan?idhapussanksi=' + $("#idhapussanksi").val() + "&t_jenisketetapan=" + $("#jenisketetapan").val() + "&ttd0=" + $("#ttd").val());
    }
    
</script>

