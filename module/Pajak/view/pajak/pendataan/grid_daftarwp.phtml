<script type="text/javascript">
    $(function () {
        calldatagrid();
    });

    function calldatagrid(direction) {
        datagrid($("#s_idjenis").val(), $("#page").val(), $("#rows").val(), direction);
    }

    function datagrid(s_idjenis, pagewp, row, direction) {
        $.post('<?= $this->url() ?>/dataGridWp/' + s_idjenis + '/' + pagewp + '/' + row + '/' + direction, {
            t_npwpd: $('#t_npwpd_cari_0').val(),
            t_nama: $('#t_nama_cari_0').val(),
            t_niop: $('#t_niop_cari_0').val(),
            t_namaobjek: $('#t_namaobjek_cari_0').val(),
            t_alamatobjek: $('#t_alamatobjek_cari_0').val(),
            t_kelurahanobjek: $('#t_kelurahanobjek_cari_0').val(),
            t_kecamatanobjek: $('#t_kecamatankecamatan_cari_0').val()
        }, function (data) {
            var aa = JSON.parse(data)
            $("#body_grid").html(aa.gridwp);
            $("#rows").val(aa.rowswp);
            $("#page").val(aa.pagewp);
            $("#total_data").html(": " + aa.countwp);
            $("#total_halaman").html(": " + aa.total_halamanwp);
            $("#paginatore").html(aa.paginatorewp);
            $("#awaldata").html(aa.awaldatawp);
            $("#akhirdata").html(aa.akhirdatawp);
        });
    }

    function bukaCetakKartudata(a) {
        $.post('<?= $this->url() ?>/dataWPObjek', {idobjek: a}, function (data) {
            var aa = JSON.parse(data);
            $("#idwpobjekkartudata").val(aa.idobjek);
            $("#namawpkartudata").val(aa.namawp);
            $("#alamatwpkartudata").val(aa.alamatwp);
            $("#namaopkartudata").val(aa.namaop);
            $("#alamatopkartudata").val(aa.alamatop);
        });
        $('#modalCetakKartudata').modal('show');
    }

    function tutupCetakKartudata() {
        $('#modalCetakKartudata').modal('hide');
    }

    function cetakKartuData() {
        window.open('<?= $this->url() ?>/cetakkartudata?idobjek=' + $("#idwpobjekkartudata").val() + "&periode=" + $("#periodekartudata").val() + "&ttddiperiksa=" + $("#ttddiperiksakartudata").val() + "&ttdmengetahui=" + $("#ttdmengetahuikartudata").val());
    }

</script>
