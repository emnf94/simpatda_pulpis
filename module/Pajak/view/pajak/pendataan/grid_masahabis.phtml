<script type="text/javascript">
    $(function () {
        $('#t_tglpendataan_cari_2').daterangepicker({
            format: 'DD-MM-YYYY'
        }, function () {
            calldatagrid1();
        });
    });

    $(function () {
        $('#t_masapajak_cari_2').daterangepicker({
            format: 'DD-MM-YYYY'
        }, function () {
            calldatagrid1();
        });
    });
    
    $(function () {
        calldatagrid2();
    });

    function calldatagrid2(direction) {
        datagrid2($("#s_idjenis").val(), $("#page2").val(), $("#rows2").val(), direction);
    }

    function datagrid2(s_idjenis, page2, row, direction) {
        $.post('<?= $this->url() ?>/dataGridMasahabis/' + s_idjenis + '/' + page2 + '/' + row + '/' + direction,{
            t_nourut: $('#t_nourut_cari_2').val(),
            t_tglpendataan: $('#t_tglpendataan_cari_2').val(),
            t_npwpd: $('#t_npwpd_cari_2').val(),
            t_nama: $('#t_nama_cari_2').val(),
            t_niop: $('#t_niop_cari_2').val(),
            t_namaobjek: $('#t_namaobjek_cari_2').val(),
            t_masapajak: $('#t_masapajak_cari_2').val(),
            t_jmlhpajak: $('#t_jmlhpajak_cari_2').val()
        }, function (data) {
            var aa = JSON.parse(data)
            $("#body_grid2").html(aa.grid2);
            $("#rows2").val(aa.rows2);
            $("#page2").val(aa.page2);
            $("#total_data2").html(": " + aa.count2);
            $("#total_halaman2").html(": " + aa.total_halaman2);
            $("#paginatore2").html(aa.paginatore2);
            $("#awaldata2").html(aa.awaldata2);
            $("#akhirdata2").html(aa.akhirdata2);
        });
    }

    function hapus(a) {
        var tanya = confirm("Hapus data ini?")
        if (tanya) {
            $.post('<?= $this->url() ?>/hapus/' + a);
        }
        setTimeout(function () {
            calldatagrid1();
            calldatagrid2();
        }, 1000);
    }

    function bukaCetakHimbauan(a) {
        $.post('<?= $this->url() ?>/dataPendataan', {idtransaksi: a}, function (data) {
            var aa = JSON.parse(data);
            $("#idtransaksihimbauan").val(aa.idtransaksi);
            $("#namawphimbauan").val(aa.namawp);
            $("#alamatwphimbauan").val(aa.alamatwp);
            $("#tglketetapanhimbauan").val(aa.tglketetapan);
        });
        $('#modalCetakHimbauan').modal('show');
    }

    function tutupCetakHimbauan() {
        $('#modalCetakHimbauan').modal('hide');
    }

    function cetakhimbauan() {
        window.open('<?= $this->url() ?>/cetakhimbauan?t_idtransaksi=' + $("#idtransaksihimbauan").val() + "&ttd0=" + $("#ttd0").val());
    }
</script>
